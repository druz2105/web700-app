<div class="row m-2">
    <div class="col-md-10">
        <br>
        <h2>Courses</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Course Code</th>
                    <th>Course Description</th>
                </tr>
                </thead>
                <tbody>
                {{#each courses}}
                    <tr>
                        <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                        <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                        <td>
                            <a href="/courses/delete/{{this.courseId}}" class="btn btn-danger">remove</a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-2">
        <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
    </div>

</div>
{{#unless courses}}
    <div class="col-md-12 text-center"><strong>{{message}}</strong></div>
{{/unless}}
