{{#unless successMessage}}
    <div class="col-md-12 text-center" style="color: green"><strong>{{successMessage}}</strong></div>
{{/unless}}
<div class="row">
    <main class="col-md-12">
        <br>
        <h2>{{viewData.student.firstName}} {{viewData.student.lastName}} - Student: {{viewData.student.studentNum}}</h2>
        <hr />
        <form method="post" action="/student/update">
            <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}" />
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text" value="{{viewData.student.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text" value="{{viewData.student.lastName}}" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input class="form-control" id="email" name="email" type="email" value="{{viewData.student.email}}" />
                </div>
                <div class="form-group">
                    <label for="addressStreet">Address (Street):</label>
                    <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{viewData.student.addressStreet}}" />
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="addressCity">Address (City):</label>
                            <input class="form-control" id="addressCity" name="addressCity" type="text" value="{{viewData.student.addressCity}}" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="addressProvince">Address (Province):</label>
                            <input class="form-control" id="addressProvince" name="addressProvince" type="text" value="{{viewData.student.addressProvince}}" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="TA">TA:</label>
                    <input id="TA" type="checkbox" name="TA" {{#if viewData.student.TA}}checked{{/if}} />
                </div>
                <div class="form-group">
                    <label>Status:</label>
                    <div class="form-check">
                        <input class="form-check-input" id="fullTime" type="radio" name="status" value="Full Time" {{#equal viewData.student.status "Full Time"}}checked{{/equal}} />
                        <label class="form-check-label" for="fullTime">Full Time</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" id="partTime" type="radio" name="status" value="Part Time" {{#equal viewData.student.status "Part Time"}}checked{{/equal}} />
                        <label class="form-check-label" for="partTime">Part Time</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="course">Course type:</label>
                    {{#if viewData.courses}}
                        <select class="form-control" name="courseId" id="course">
                            <option value="">Select Course</option>
                        {{#each viewData.courses}}
                            <option value="{{courseId}}" {{#if selected}} selected {{/if}} >{{courseCode}} </option>
                        {{/each}}
                        </select>
                    {{else}}
                        <div>No Courses</div>
                    {{/if}}
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary float-right" value="Update Student" />
            <br /><br /><br />
        </form>
    </main>
</div>
{{#unless student}}
    <div class="col-md-12 text-center"><strong>{{message}}</strong></div>
{{/unless}}

